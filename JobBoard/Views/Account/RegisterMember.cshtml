@model MemberRegisterViewModel
@{
	ViewData["Title"] = "RegisterMember";
}


		<section class="section-hero overlay inner-page bg-image" style="background-image: url('../assets/images/hero_1.jpg');" id="home-section">
			<div class="container">
				<div class="row">
					<div class="col-md-7">
				<h1 class="text-white font-weight-bold">Register as a user</h1>
						<div class="custom-breadcrumbs">
							<a asp-action="index" asp-controller="home">Home</a> <span class="mx-2 slash">/</span>
							<span class="text-white"><strong></strong>Sing Up</span>
						</div>
					</div>
				</div>
			</div>
		</section>
		<section class="site-section">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 mb-5">
				        <h2 class="mb-4">Register as a user on JobBoard</h2>
						<form method="post" enctype="multipart/form-data"	 class="p-4 border rounded">
							<div class="row">
						<div class="col-md-6 ">
							<label class="text-black" asp-for="Name">Name</label>
							<input  asp-for="Name" class="form-control" placeholder="Name">
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="col-md-6">
							<label class="text-black" asp-for="Surname">Surname</label>
							<input asp-for="Surname" class="form-control" placeholder="Surname">
							<span asp-validation-for="Surname" class="text-danger"></span>

						</div>
							</div>
							<div class="row">
						<div class="col-md-6 ">
							<label class="text-black" asp-for="Email" >Email</label>
							<input asp-for="Email" class="form-control" placeholder="Email address">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="col-md-6">
							<label class="text-black" asp-for="UserName">Username</label>
							<input asp-for="UserName" class="form-control" placeholder="Username">
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>
							</div>
					<div class="row">
						<div class="col-md-6 ">
							<label class="text-black" asp-for="Imagefile">Image</label>
							<input asp-for="Imagefile" class="form-control" placeholder="Image">
							<span asp-validation-for="Imagefile" class="text-danger"></span>
						</div>
						<div class="col-md-6">
							<label class="text-black" asp-for="CvFile">Cv</label>
							<input asp-for="CvFile" class="form-control" placeholder="Cv">
							<span asp-validation-for="CvFile" class="text-danger"></span>
						</div>
					</div>
							<div class="row">
						<div class="col-md-6 ">
							<label class="text-black" asp-for="Password" >Password</label>
							<input asp-for="Password" class="form-control" placeholder="Password">
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="col-md-6">
							<label class="text-black" asp-for="ConfirePassword">Repeat Password</label>
							<input asp-for="ConfirePassword" class="form-control" placeholder="Repeat Password">
							<span asp-validation-for="ConfirePassword" class="text-danger"></span>
						</div>
							</div>
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<div class="row form-group" style="margin-top:10px">
								<div class="col-md-12">
									<input type="submit" value="Sign Up" class="btn px-4 btn-primary text-white">
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</section>