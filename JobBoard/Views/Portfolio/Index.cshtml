@model PortfolioViewModel
@{
    ViewData["Title"] = "Index";
}



        <section class="section-hero overlay inner-page bg-image" style="background-image: url('/assets/images/hero_1.jpg');" id="home-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <h1 class="text-white font-weight-bold">Portfolio (Extra Pages)</h1>
                        <div class="custom-breadcrumbs">
                            <a asp-action="index" asp-controller="home">Home</a> <span class="mx-2 slash">/</span>
                            <span class="text-white"><strong>Portfolio</strong></span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="site-section block__62272" id="next-section">
            <div class="container">
                <div class="row justify-content-center mb-5" data-aos="fade-up">
                    <div id="filters" class="filters text-center button-group col-md-7">
                        <button class="btn btn-primary active" data-filter="*">All</button>
                @foreach (var item in Model.poerfolioCatagories)
                {
                        <button class="btn btn-primary" data-filter=".@item.Name">@item.Name</button>
                    
                }
                    </div>
                </div>
                <div id="posts" class="row no-gutter">
                    @foreach (var item in Model.PortfolioItems)
            {
                    <div class="item @item.poerfolioCatagories?.Name col-6 col-sm-6 col-md-6 col-lg-4 col-xl-4 mb-4">
                        <a asp-action="details" asp-controller="portfolio" asp-route-id="@item.Id" class="item-wrap">
                            <span class="icon-add"></span>
                            <img class="img-fluid" src="~/uploads/portfolio/@item.portfolioItemImages.FirstOrDefault(x=>x.IsPoster==true).Images">
                        </a>
                    </div>
                
            }
                </div>
            </div>
        </section>




        <section class="site-section bg-light">
            <div class="container">
                <div class="row mb-5">
                    <div class="col-12 text-center" data-aos="fade">
                        <h2 class="section-title mb-3">Happy Candidates Says</h2>
                    </div>
                </div>
                <div class="row">

                    @foreach (var item in Model.commentSites)
            {
                    <div class="col-lg-6">
                        <div class="block__87154 bg-white rounded">
                            <blockquote>
                                <p>@item.Comment</p>
                            </blockquote>
                            <div class="block__91147 d-flex align-items-center">
                                <figure class="mr-4"><img src="~/uploads/commentsite/@item.Commentatorİmage" alt="Image" class="img-fluid"></figure>
                                <div>
                                    <h3>@item.CommentatorSurname @item.CommentatorName</h3>
                                    <span class="position">@item.Data</span>
                                </div>
                            </div>
                        </div>
                    </div>
            }
                </div>
            </div>
        </section>

