@model CommentSite
@{
    ViewData["Title"] = "Create";
}

<section class="section-hero overlay inner-page bg-image" style="background-image: url('/assets/images/hero_1.jpg');" id="home-section">
	<div class="container">
		<div class="row">
			<div class="col-md-7">
				<h1 class="text-white font-weight-bold">Add a comment to  website</h1>
				<div class="custom-breadcrumbs">
					<a asp-action="index" asp-controller="home">Home</a> <span class="mx-2 slash">/</span>
					<span class="text-white"><strong>Commen</strong></span>
				</div>
			</div>
		</div>
	</div>
</section>



<section class="site-section" id="next-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 mb-5 mb-lg-0">
				<form method="post" asp-action="Create" enctype="multipart/form-data">
					<div class="row form-group">
						<div class="col-md-6 mb-3 mb-md-0">
							<label class="text-black" asp-for="CommentatorName">Name</label>
							<input asp-for="CommentatorName" class="form-control">
							<span class="text-danger" asp-validation-for="CommentatorName"></span>
						</div>
						<div class="col-md-6">
							<label class="text-black" asp-for="CommentatorSurname">Surname</label>
							<input asp-for="CommentatorSurname" class="form-control">
							<span class="text-danger" asp-validation-for="CommentatorSurname"></span>
						</div>
					</div>
					<div class="row form-group">
						<div class="col-md-12">
							<label class="text-black" asp-for="ImageFile">Image</label>
							<input asp-for="ImageFile" class="form-control">
							<span class="text-danger" asp-validation-for="ImageFile"></span>
						</div>
					</div>
					<div class="row form-group">
						<div class="col-md-12">
							<label class="text-black" asp-for="Comment">Comment</label>
							<textarea asp-for="Comment" cols="30" rows="7" class="form-control" placeholder="Write your comment here..."></textarea>
							<span class="text-danger" asp-validation-for="Comment"></span>
						</div>
					</div>
					<div class="row form-group">
						<div class="col-md-12">
							<input type="submit" value="Send Comment" class="btn btn-primary btn-md text-white">
						</div>
					</div>
				</form>

			</div>
		</div>
	</div>
</section>



<section class="site-section bg-light">
	<div class="container">
		<div class="row mb-5">
			<div class="col-12 text-center" data-aos="fade">
				<h2 class="section-title mb-3">Happy Candidates Says</h2>
			</div>
		</div>
		<div class="row">
			@foreach (CommentSite item in ViewBag.comment)
			{
			<div class="col-lg-6">
				<div class="block__87154 bg-white rounded">
					<blockquote>
						<p>@item.Comment</p>
					</blockquote>
					<div class="block__91147 d-flex align-items-center">
						<figure class="mr-4"><img src="~/uploads/commentsite/@item.Commentatorİmage" alt="Image" class="img-fluid"></figure>
						<div>
							<h3>@item.CommentatorSurname @item.CommentatorName</h3>
							<span class="position">@item.Data?.ToString("MMM dd,yyyy")</span>
						</div>
					</div>
				</div>
			</div>
				
			}
		</div>
	</div>
</section>

