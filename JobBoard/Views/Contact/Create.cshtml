		<section class="site-section" id="next-section">
			<div class="container">
				<div class="row">
					<div class="col-lg-6 mb-5 mb-lg-0">
						<form method="post" asp-action="Create">
							<div class="row form-group">
								<div class="col-md-6 mb-3 mb-md-0">
									<label class="text-black" asp-for="contact.Name">Name</label>
									<input asp-for="contact.Name" class="form-control">
									<span class="text-danger" asp-validation-for="contact.Name"></span>
								</div>
								<div class="col-md-6">
							<label class="text-black" asp-for="contact.Surname">Surname</label>
							<input asp-for="contact.Surname" class="form-control">
							<span class="text-danger" asp-validation-for="contact.Surname"></span>
								</div>
							</div>
							<div class="row form-group">
								<div class="col-md-12">
							<label class="text-black" asp-for="contact.Email">Email</label>
							<input asp-for="contact.Email" class="form-control">
							<span class="text-danger" asp-validation-for="contact.Email"></span>
								</div>
							</div>
							<div class="row form-group">
								<div class="col-md-12">
							<label class="text-black" asp-for="contact.Subject">Subject</label>
							<input asp-for="contact.Subject" class="form-control">
							<span class="text-danger" asp-validation-for="contact.Subject"></span>
								</div>
							</div>
							<div class="row form-group">
								<div class="col-md-12">
							<label class="text-black" asp-for="contact.Message">Message</label>
							<textarea asp-for ="contact.Message" cols="30" rows="7" class="form-control" placeholder="Write your notes or questions here..."></textarea>
							<span class="text-danger" asp-validation-for="contact.Message"></span>
								</div>
							</div>
							<div class="row form-group">
								<div class="col-md-12">
									<input type="submit" value="Send Message" class="btn btn-primary btn-md text-white">
								</div>
							</div>
						</form>
					</div>

