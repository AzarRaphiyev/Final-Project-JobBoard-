@model List<ServicesSite>
@{
    ViewData["Title"] = "Index";
}



<section class="section-hero overlay inner-page bg-image" style="background-image: url('/assets/images/hero_1.jpg');" id="home-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <h1 class="text-white font-weight-bold">Services</h1>
                        <div class="custom-breadcrumbs">
                            <a asp-action="index" asp-controller="home">Home</a> <span class="mx-2 slash">/</span>
                            <span class="text-white"><strong>Services</strong></span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="site-section services-section bg-light block__62849" id="next-section">
            <div class="container">
                <div class="row">
                    @foreach (var item in Model)
            {
                
                    <div class="col-6 col-md-6 col-lg-4 mb-4 mb-lg-5">
                    <a asp-action="details" asp-controller="services" asp-route-id="@item.Id" class="block__16443 text-center d-block">
                           <span class="custom-icon mx-auto"><span class="@item.Icon d-block"></span></span>
                            <h3>@item.Name</h3>
                        </a>
                    </div>
            }
                </div>
            </div>
        </section>
