@model List<ContactİnfoBar>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}
<div class="mx-5">
	<div class="d-flex justify-content-between align-content-center">

		<h3>Control Info Bar:</h3>
		<a asp-action="create" asp-controller="ContactInfoBar" class="btn btn-primary">+Add</a>
	</div>
	<table class="table table-hover" style="margin-top:10px">
		<thead class="thead-light">
			<tr>
				<th scope="col">#</th>
				<th scope="col">Address</th>
				<th scope="col">Phone Number</th>
				<th scope="col">Email</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				count++;
				<tr>
					<th scope="row">@count</th>
					<td>@item.Address</td>
					<td>@item.PhoneNumber</td>
					<td>@item.Email</td>
					<td>
						<a asp-action="update" asp-controller="ContactInfoBar" asp-route-id="@item.id" class="btn btn-outline-primary"> <i class="bi bi-pencil-square"></i> </a>
						<a asp-action="delete" asp-controller="ContactInfoBar" asp-route-id="@item.id" class="btn btn-outline-danger"> <i class="fas fa-trash"></i> </a>
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>
