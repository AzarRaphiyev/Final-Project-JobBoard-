@model PaginationList<AppUser>
@{
    ViewData["Title"] = "Index";
	int count = (Model.Page - 1) * 3;
}
<div class="mx-5">
<div class="d-flex justify-content-between align-content-center" >

	<h3>Companies:</h3>
		
</div >
	<table class="table table-hover" style="margin-top:10px">
		<thead class="thead-light">
			<tr>
				<th scope="col">#</th>
				<th scope="col">Image</th>
				<th scope="col">Company name</th>
				<th scope="col">Username</th>
				<th scope="col">Email</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				count++;

					<tr>
						<th scope="row">@count</th>
						<td><img style="width:100px" src="~/uploads/users/@item.Image"/></td>
						<td>@item.FullName</td>
						<td>@item.UserName</td>
						<td>@item.Email</td>
						<td>
						<a asp-action="delete" asp-controller="CompanyTables" asp-route-id="@item.Id" class="deletebtn btn btn-danger"> <i class="fas fa-trash"></i> </a>
						</td>
					</tr>
			}

		</tbody>
	</table>
	<div class="d-flex justify-content-center">

		<form method="get">

			<nav aria-label="...">
				<ul class="pagination">
					@if (Model.HasPrevios)
					{
							<li class="page-item ">
							<a class="page-link" asp-action="index" asp-controller="CompanyTables" asp-route-page="@(Model.Page-1)" tabindex="-1" aria-disabled="true">Previous</a>
							</li>
					}

					@for (int i = 1; i < Model.TotalPage; i++)
					{
						<li class="page-item @(Model.Page==i ? "active" : "" )"><a class="page-link" asp-action="index" asp-controller="CompanyTables" asp-route-page="@i">@i</a></li>
					}


					@if (Model.HasNextios)
					{
							<li class="page-item">
							<a class="page-link" asp-action="index" asp-controller="CompanyTables" asp-route-page="@(Model.Page+1)">Next</a>
							</li>
					}
				</ul>
			</nav>

		</form>


	</div>
</div>



