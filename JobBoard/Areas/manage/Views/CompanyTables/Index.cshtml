@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}
<div class="mx-5">
<div class="d-flex justify-content-between align-content-center" >

	<h3>Companies:</h3>
		
</div >
	<table class="table table-hover" style="margin-top:10px">
		<thead class="thead-light">
			<tr>
				<th scope="col">#</th>
				<th scope="col">Image</th>
				<th scope="col">Company name</th>
				<th scope="col">Username</th>
				<th scope="col">Email</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				count++;

					<tr>
						<th scope="row">@count</th>
						<td><img style="width:100px" src="~/uploads/company/@item.Image"/></td>
						<td>@item.FullName</td>
						<td>@item.UserName</td>
						<td>@item.Email</td>
						<td>
							<a asp-action="delete" asp-controller="CompanyTables" asp-route-id="@item.Id" class="btn btn-danger"> <i class="fas fa-trash"></i> </a>
						</td>
					</tr>
			}

		</tbody>
	</table>
</div>



