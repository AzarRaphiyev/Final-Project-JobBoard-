@model List<AppUser>
@{
	ViewData["Title"] = "Index";
	int count = 0;
}


<div class="mx-5">
	<div class="d-flex justify-content-between align-content-center">

		<h3>Users:</h3>
	</div>
	<table class="table table-hover" style="margin-top:10px">
		<thead class="thead-light">
			<tr>
				<th scope="col">#</th>
				<th scope="col">Username</th>
				<th scope="col">Fullname</th>
				<th scope="col">Email</th>
				<th scope="col">Role</th>
				<th scope="col">Enable?</th>
				<th scope="col">Image</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				count++;

					<tr>
						<th scope="row">@count</th>
						<td>@item.UserName</td>
						<td>@item.FullName</td>
						<td>@item.Email</td>
						<td class="text-dark">@item.Role</td>
						@if (item.Enabled==true)
					{
						<td class="text-success" >@item.Enabled</td>
					}else
					{
						<td class="text-danger" >@item.Enabled</td>
							
					}
						<td>
							<img style="width:100px" src="~/uploads/users/@item.Image"/>
						</td>
						<td>
							@if (item.Role!="SuperAdmin")
						{
							@if (item.Enabled==false)
						    {
							<a asp-action="Activateuser" asp-controller="AppUsers" asp-route-id="@item.Id" class="btn btn-outline-warning"> <i class="bi bi-star-fill"></i> </a>
						    }
						    <a asp-action="delete" asp-controller="AppUsers" asp-route-id="@item.Id" class="btn btn-outline-danger"> <i class="fas fa-trash"></i> </a>
						}
						else
						{
								
						}
						</td>
					</tr>
			}

		</tbody>
	</table>
</div>
